

  <!-- Modal content -->
<div style="background-color: white">
   <form class="edit-post-form">
    <div>
      <label for="">Movie Title</label>
      <input type="text" id="post-title" name="post-title" value="{{post.title}}"/>
      <select name="genres" id="genres" class="genre-select">
              <option value="default" selected disabled hidden>
                Select a Movie Genre to see reviews!
              </option>
              <option value="Action">Action</option>
              <option value="Drama">Drama</option>
              <option value="Horror">Horror</option>
              <option value="Comedy">Comedy</option>
              <option value="Romance">Romance</option>
              <option value="Sci-Fi">Sci-Fi</option>
              <option value="Thriller">Thriller</option>
              <option value="Western">Western</option>
              <option value="Family">Family</option>
              
            </select>
    </div>
    
    <div>
      <label for="movie-review">Movie Review</label>
      <input id="movie-review" name="movie-review"  value="{{post.movie_review}}"/>
    </div>
    <div id="rateMovie">Rate the Movie: </div>
    <div id="starRating"class="rate"> 
      <input type="radio" id="star5" name="rate" value="5" />
      <label for="star5" title="text">5 stars</label>
      <input type="radio" id="star4" name="rate" value="4" />
      <label for="star4" title="text">4 stars</label>
      <input type="radio" id="star3" name="rate" value="3" />
      <label for="star3" title="text">3 stars</label>
      <input type="radio" id="star2" name="rate" value="2" />
      <label for="star2" title="text">2 stars</label>
      <input type="radio" id="star1" name="rate" value="1" />
      <label for="star1" title="text">1 star</label>
    </div>
   
    <div id = "create">
    <button id= "update" type="submit" class="CreateBtn">Save Updated Review</button>
    <div>
  </form>
    <button type="button" class="delete-post-btn">Delete post</button>
</div>

    <form class="comment-form">
  <div>
    <h3>Comment:</h3>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button id= "addComment" type="submit">add comment</button>
  </div>
</form>

<div>
{{> comments post.comments}}
</div>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>